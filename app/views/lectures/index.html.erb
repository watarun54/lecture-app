<div id="lectures-index" class="container my-5">
  <div class="row">
    <div class="col">

      <%= form_tag search_lectures_path, method: :get do %>
        <div class="form-group">
          <%= text_field_tag :search, '', id: "lecture-search-box", class: "form-control mx-auto", placeholder: "検索..." %>
        </div>
        <div class="mt-4 text-center">
          <%= button_tag type: 'submit', class: "btn btn-default" do %>
            さがす
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card my-5">
    <h5 class="card-header">いろんなランキング</h5>
    <div class="card-body">
      <div class="card-group">
        <div class="card border-0">
          <div class="card-body">
            <p class="font-weight-bold">評価ランキング</p>
            <ol>
            <% @lectures_by_rate.first(5).each do |lec_arr| %>
              <li>位【 評価 <%= lec_arr[1] %> / 5.0 】 <%= link_to lec_arr[0].title, lec_arr[0] %></li>
            <% end %>
            </ol>
          </div>
        </div>
        <div class="card border-0">
          <div class="card-body">
            <p class="font-weight-bold">レビュー数ランキング</p>
            <ol>
            <% @lectures_by_reviews.first(5).each do |lec_arr| %>
              <li>位【 レビュー数 <%= lec_arr[2] %> 】 <%= link_to lec_arr[0].title, lec_arr[0] %></li>
            <% end %>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <% @lectures.includes(:reviews).each do |lecture| %>
    <div class="col-sm-6 col-md-4 mb-5">
      <%= render "lecture", lecture: lecture %>
    </div>
    <% end %>
    <div class="col-12">
      <%= paginate @lectures %>
    </div>
  </div>
</div>
