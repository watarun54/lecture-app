<div class="shadow">
  <%= link_to(lecture, class: "text-muted") do %>
  <div class="card">
    <div class="card-body">
      <div class="mb-2">
        <span class="badge badge-success">評価：<%= average_rate(lecture.reviews) %></span>
        <span class="badge badge-info">レビュー数：<%= lecture.reviews.size %></span>
      </div>
      <h5 class="card-title"><%= lecture.title %></h5>
      <p class="card-text"><%= lecture.content.truncate(100) %></p>
    </div>
  </div>
  <% end %>
</div>
